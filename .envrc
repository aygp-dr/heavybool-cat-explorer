# HeavyBool Category Explorer environment configuration
# This is loaded by direnv if installed (https://direnv.net/)

# Quiet EMSDK messages
export EMSDK_QUIET=1

# Load local environment variables if .env file exists
if [ -f .env ]; then
  source_env .env
fi

# Set up common project paths
export PROJECT_ROOT=$(pwd)
export SRC_DIR="$PROJECT_ROOT/src"
export EXAMPLES_DIR="$PROJECT_ROOT/examples"
export TESTS_DIR="$PROJECT_ROOT/tests"
export IMAGES_DIR="$PROJECT_ROOT/images"